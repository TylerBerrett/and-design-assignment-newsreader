<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ListPage"
        android:background="@color/primaryColor">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/img_cat"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <View
                    android:background="@drawable/cat"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"/>
            <TextView
                    android:id="@+id/cat_text"
                    android:background="@color/primaryLightColor"
                    android:text="Proof Cats Are From The Devil"
                    android:textColor="@color/secondaryTextColor"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/pictures_left"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/pictures_right"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/img_ice_cream"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:background="@drawable/icecream"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                    <TextView
                            android:id="@+id/icecream_text"
                            android:background="@color/primaryLightColor"
                            android:text="Why Does Ice Cream Melt?"
                            android:textColor="@color/secondaryTextColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/img_code"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:background="@drawable/coding"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                    <TextView
                            android:id="@+id/app_text"
                            android:background="@color/primaryLightColor"
                            android:text="How To Create a an App."
                            android:textColor="@color/secondaryTextColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/pictures_right"
                    app:layout_constraintLeft_toRightOf="@id/pictures_left"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/img_botanical"
                        android:paddingLeft="8dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:background="@drawable/botanical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                    <TextView
                            android:id="@+id/botanical_text"
                            android:background="@color/primaryLightColor"
                            android:text="Why Oxygen Is Bad"
                            android:textColor="@color/secondaryTextColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/img_utah"
                        android:paddingLeft="8dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:background="@drawable/utah"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                    <TextView
                            android:id="@+id/utah_text"
                            android:background="@color/primaryLightColor"
                            android:text="Hikes To Do In Utah"
                            android:textColor="@color/secondaryTextColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
                android:id="@+id/img_cat2"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <View
                    android:background="@drawable/cat"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"/>
            <TextView
                    android:background="@color/primaryLightColor"
                    android:text="Copies to show scroll view works"
                    android:textColor="@color/secondaryTextColor"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/pictures_left2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/pictures_right2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/img_ice_cream2"
                        android:paddingRight="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:background="@drawable/icecream"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                    <TextView
                            android:background="@color/primaryLightColor"
                            android:text="Copies to show scroll view works"
                            android:textColor="@color/secondaryTextColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/pictures_right2"
                    app:layout_constraintLeft_toRightOf="@id/pictures_left2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:id="@+id/img_botanical2"
                        android:paddingLeft="8dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <View
                            android:background="@drawable/botanical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"/>
                    <TextView
                            android:background="@color/primaryLightColor"
                            android:text="Copies to show scroll view works"
                            android:textColor="@color/secondaryTextColor"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</ScrollView>